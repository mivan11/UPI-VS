<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.moje.vs.main"
    android:background="@drawable/glavna">

    <Button
        android:text="Postavke"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/postavke"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:background="@android:color/holo_blue_light"
        android:textSize="18sp"
        android:textStyle="normal|bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="50dp"
        android:layout_marginBottom="111dp"
        android:id="@+id/baterija" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/baterija"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="50dp"
        android:id="@+id/temperatura" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/baterija"
        android:layout_marginStart="11dp"
        android:layout_marginBottom="15dp"
        android:id="@+id/emisija" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/emisija"
        android:layout_alignEnd="@+id/temperatura"
        android:id="@+id/vlaznost" />

    <Button
        android:text="Podaci"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="25dp"
        android:background="@android:color/holo_blue_light"
        android:textSize="18sp"
        android:textStyle="normal|bold"
        android:id="@+id/podaci"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/postavke" />

    <Button
        android:text="OvjeÅ¾i"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="17dp"
        android:id="@+id/osvjezi"
        android:background="@android:color/holo_blue_light" />


</RelativeLayout>
